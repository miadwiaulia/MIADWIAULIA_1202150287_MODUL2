<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context="com.tugas.asus.miadwiaulia_1202150287_modul2.TakeAway">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin_top_logo"
        android:text="Identitas Pemesan:"
        android:textColorHighlight="@android:color/background_dark"
        android:textColorHint="@android:color/black"
        android:textSize="@dimen/text_size_head" />

    <EditText
        android:id="@+id/et_Nama"
        android:layout_width="@dimen/width_editText"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10sp"
        android:hint="Nama" />

    <EditText
        android:id="@+id/et_telepon"
        android:layout_width="@dimen/width_editText"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10sp"
        android:hint="Phone"
        android:inputType="phone" />

    <EditText
        android:id="@+id/et_Address"
        android:layout_width="@dimen/width_editText"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10sp"
        android:hint="Address" />

    <EditText
        android:id="@+id/et_Note"
        android:layout_width="@dimen/width_editText"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10sp"
        android:hint="Note" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10sp"
        android:background="@color/colorAccent"
        android:onClick="onClickOrder"
        android:padding="@dimen/padding_button"
        android:text="PILIH PESANAN"
        android:textColor="@android:color/background_light" />
</LinearLayout>
